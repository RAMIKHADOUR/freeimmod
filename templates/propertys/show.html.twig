{% extends 'base.html.twig' %}

{% block title %}Propertys{% endblock %}

{% block body %}
    <h1>Propertys</h1>
<div class="container">
    <table class="table table-bordered table-hover" style="border-radius:5%;">
        <tbody>
        

            <tr class="table-primary">
                <th scope="row" scope="row">Image</th>
                <td><img style="width:100PX;" src="{{ vich_uploader_asset(property, 'imageFile') }}"/></td>
            </tr>
            <tr class="table-warning">
                <th scope="row">Code</th>
                <td>{{ property.code }}</td>
            </tr>

            <tr class="table-warning">
                <th scope="row">Category</th>
                <td>{{ property.category }}</td>
            </tr>

            <tr class="table-primary">
                <th scope="row">Type</th>
                <td>{{ property.typeproperty }}</td>
            </tr>
            
            <tr class="table-warning">
                <th scope="row">Surface</th>
                <td>{{ property.surface }}</td>
            </tr>
            <tr class="table-primary">
                <th scope="row">Description</th>
                <td>{{ property.description }}</td>
            </tr>
            <tr class="table-warning">
                <th scope="row">Prix</th>
                <td>{{ property.prix }}</td>
            </tr>
            <tr class="table-primary">
                <th scope="row">Chambres</th>
                <td>{{ property.chambres }}</td>
            </tr>
            <tr class="table-warning">
                <th scope="row">Salle_bains</th>
                <td>{{ property.salleBains }}</td>
            </tr>
            <tr class="table-primary">
                <th scope="row">Etages</th>
                <td>{{ property.etages }}</td>
            </tr>
            <tr class="table-warning">
                <th scope="row">Numero_etage</th>
                <td>{{ property.numeroEtage }}</td>
            </tr>
            <tr class="table-primary">
                <th scope="row">Adresse</th>
                <td>{{ property.adresse }}</td>
            </tr>
            <tr class="table-warning">
                <th scope="row">Ville</th>
                <td>{{ property.ville }}</td>
            </tr>
            <tr class="table-primary">
                <th scope="row">Code_postale</th>
                <td>{{ property.codePostale }}</td>
            </tr>
            <tr class="table-warning">
                <th scope="row">Region</th>
                <td>{{ property.region }}</td>
            </tr>
            <tr class="table-primary">
                <th scope="row">Internet</th>
                <td>{{ property.internet ? 'Yes' : 'No' }}</td>
            </tr>
            <tr class="table-warning">
                <th scope="row">Balcon</th>
                <td>{{ property.balcon ? 'Yes' : 'No' }}</td>
            </tr>
            <tr class="table-primary">
                <th scope="row">Garage</th>
                <td>{{ property.garage ? 'Yes' : 'No' }}</td>
            </tr>
            <tr class="table-warning">
                <th scope="row">Salle_sport</th>
                <td>{{ property.sallesport ? 'Yes' : 'No' }}</td>
            </tr>
            <tr class="table-primary">
                <th scope="row">Piscine</th>
                <td>{{ property.piscine ? 'Yes' : 'No' }}</td>
            </tr>
            <tr class="table-warning">
                <th scope="row">Camera_surveillance</th>
                <td>{{ property.camerasurveillance ? 'Yes' : 'No' }}</td>
            </tr>
        
            <tr class="table-primary">
                <th scope="row">CreatedAt</th>
                <td>{{ property.createdAt ? property.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-warning m-2" href="{{ path('app_propertys_index') }}">Retour Ã  la liste</a>

    <a class="btn btn-primary m-2" href="{{ path('app_propertys_edit', {'id': property.id}) }}">Modifier</a>

    {{ include('propertys/_delete_form.html.twig') }}

    </div>
{% endblock %}

